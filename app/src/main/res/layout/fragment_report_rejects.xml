<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/product"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/status_bar"/>

        <TextView
            android:id="@+id/report_rejects_product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:text="@string/product_name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/report_rejects_product_name_text_view"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/report_rejects_product_name_text_view"
            android:text="@string/id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/report_rejects_product_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/id_title"
            android:text="@string/product_id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/report_rejects_job_id__text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/report_rejects_product_id_text_view"
            android:layout_marginEnd="30dp"
            android:text="@string/job_id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/report_rejects_job_id__text_view"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/report_rejects_job_id__text_view"
            android:text="@string/job"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/status_bar"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/C11"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_hand_blue"
                    />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/divider_gray"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Your Text\nShould be\nHere"
                    android:textSize="40sp"/>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0.97"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="@string/reject_reason"
                        android:textSize="20dp"
                        android:textColor="@color/status_bar"/>

                    <RelativeLayout
                        android:layout_width="351dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/edit_text_background_selector">

                        <Spinner
                            android:id="@+id/reject_reason_spinner"
                            android:layout_width="349dp"
                            android:layout_height="49dp"
                            android:dropDownVerticalOffset="40dp"
                            >
                        </Spinner>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="@string/cause"
                        android:textSize="20dp"                           android:textColor="@color/status_bar"
                        android:layout_marginTop="20dp"/>

                    <RelativeLayout
                        android:layout_width="351dp"
                        android:layout_height="51dp"
                        android:background="@drawable/edit_text_background_selector">

                        <Spinner
                            android:id="@+id/cause_spinner"
                            android:layout_width="349dp"
                            android:layout_height="41dp"
                            android:dropDownVerticalOffset="40dp"
                            >
                        </Spinner>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginRight="50dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/button_cancel"
                            android:layout_width="126dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="5dp"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@drawable/button_cancel_text_selector"
                            android:textSize="20dp"
                            />

                        <Button
                            android:id="@+id/button_report"
                            android:layout_width="104dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_bg_disabled"
                            android:text="@string/next"
                            android:textColor="@drawable/button_text_color_selector"
                            android:textSize="20dp"
                            android:layout_weight="0.13"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>