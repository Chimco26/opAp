<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/IS_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeTextType="uniform" />

        <RelativeLayout
            android:id="@+id/IS_display_or_edit_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5">

            <LinearLayout
                android:id="@+id/IS_number_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/IS_tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/blue1"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/IS_range_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/default_gray"
                    android:textSize="16sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/IS_edit_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3"
                android:visibility="gone">

                <EditText
                    android:id="@+id/IS_edit_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:background="@drawable/box_grey_stroke"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey1"/>

                <TextView
                    android:id="@+id/IS_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box_grey_stroke"
                    app:autoSizeMaxTextSize="20sp"
                    android:text="@string/cancel"
                    android:padding="2dp"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:textColor="@color/blue1"
                    android:textStyle="bold"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="@color/default_gray" />

</RelativeLayout>