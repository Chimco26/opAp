                 android:id="@+id/toolbar_technician_button"
                 android:layout_toStartOf="@+id/toolbar_tutorial_iv"
                 android:layout_width="23dp"
                 android:layout_height="23dp"
                 android:layout_marginEnd="31dp"
                 android:layout_centerVertical="true"
                 android:src="@drawable/technician"/>


             <ImageView
                 android:id="@+id/toolbar_technician_indicator"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toStartOf="@+id/toolbar_tutorial_iv"
                 android:visibility="visible"
                 android:layout_marginTop="15dp"
                 android:layout_marginEnd="15dp"/>

             <TextView
                 android:id="@+id/toolbar_technician_tv"
                 android:layout_toStartOf="@+id/toolbar_technician_button"
                 android:layout_marginEnd="31dp"
                 android:layout_centerVertical="true"
                 android:textColor="@color/white"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 android:textAlignment="gravity"
                 android:gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />


             <ImageView
                 android:id="@+id/toolbar_tutorial_iv"
                 android:layout_toStartOf="@+id/settings_button"
                 android:layout_width="23dp"
                 android:layout_height="23dp"
                 android:layout_marginEnd="31dp"
                 android:layout_centerVertical="true"
                 android:src="@drawable/info"/>

             <ImageView
                 android:id="@+id/settings_button"
                 android:layout_width="23dp"
                 android:layout_height="23dp"
                 android:layout_toStartOf="@+id/toolbar_notification_button"
                 android:layout_centerVertical="true"
                 android:layout_marginEnd="31dp"
                 android:src="@drawable/settings_new_small" />

             <ImageView
                 android:id="@+id/toolbar_notification_button"
                 android:layout_width="23dp"
                 android:layout_height="23dp"
                 android:layout_alignParentEnd="true"
