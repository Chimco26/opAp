<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="23dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ATATV_flavor_logo"
                    android:layout_width="165dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo_new_medium" />

                <View
                    android:id="@+id/ATATV_company_name_separator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ATATV_company_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/toolbar_technician_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="31dp"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/toolbar_tutorial_iv"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="31dp"
                android:layout_toStartOf="@+id/settings_button"
                android:src="@drawable/info" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="31dp"
                android:layout_toStartOf="@+id/toolbar_notification_button"
                android:src="@drawable/settings_new_small" />

            <ImageView
                android:id="@+id/toolbar_notification_button"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="31dp"
                android:src="@drawable/notifications" />

            <TextView
                android:id="@+id/toolbar_notification_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/toolbar_notification_button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="31dp"
                android:gravity="top"
                android:text="1"
                android:textAlignment="gravity"
                android:textColor="@color/blue1"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:gravity="center|start"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/job_indicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_no_data" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_machine_id_name"
                        style="@style/FontStyle_T7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/text_view_machine_status"
                        style="@style/FontStyle_T6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:background="@color/blue1" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/toolbar_technician_button"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="31dp"
                        android:src="@drawable/technician" />


                    <ImageView
                        android:id="@+id/toolbar_technician_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue1" />

                <com.operatorsapp.view.EmeraldSpinner
                    android:id="@+id/toolbar_production_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="25dp"
                    android:popupBackground="@android:color/transparent"
                    android:dropDownVerticalOffset="151dp" />

                <TextView
                    android:id="@+id/toolbar_production_text"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textColor="@color/blue1"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/user_new_small" />

                <FrameLayout
                    android:id="@+id/toolbar_operator_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/toolbar_operator_tv"
                        style="@style/FontStyle_T99"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="@string/operator_sign_in_action_bar"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <com.operatorsapp.view.EmeraldSpinner
                        android:id="@+id/toolbar_operator_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:drawSelectorOnTop="true"
                        android:dropDownVerticalOffset="51dp"
                        app:theme="@style/ProximaNovaSemiBold"
                        tools:ignore="MissingPrefix" />
                </FrameLayout>

                <com.operatorsapp.view.EmeraldSpinner
                    android:id="@+id/toolbar_job_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="25dp"
                    android:dropDownVerticalOffset="51dp"
                    app:theme="@style/ProximaNovaSemiBold"
                    android:popupBackground="@android:color/transparent"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

