            <com.operatorsapp.view.EmeraldSpinner
                android:id="@+id/toolbar_production_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/toolbar_job_spinner"
                android:dropDownVerticalOffset="51dp"
                app:theme="@style/ProximaNovaSemiBold"
                tools:ignore="MissingPrefix" />


            <com.operatorsapp.view.EmeraldSpinner
                android:id="@+id/toolbar_job_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/iv_user_icon"
                android:dropDownVerticalOffset="51dp"
                app:theme="@style/ProximaNovaSemiBold"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/toolbar_operator_fl"
                android:src="@drawable/user_new_small" />

            <FrameLayout
                android:id="@+id/toolbar_operator_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/toolbar_operator_tv"
                    style="@style/FontStyle_T99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/operator_sign_in_action_bar"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.operatorsapp.view.EmeraldSpinner
                    android:id="@+id/toolbar_operator_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:drawSelectorOnTop="true"
                    android:dropDownVerticalOffset="51dp"
                    app:theme="@style/ProximaNovaSemiBold"
