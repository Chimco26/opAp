<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ATATV_flavor_logo"
                android:layout_width="165dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo_new_medium" />

            <View
                android:id="@+id/ATATV_company_name_separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:background="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ATATV_company_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="26dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/toolbar_status_lock_iv"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="31dp"
            android:layout_toEndOf="@+id/linearLayout"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/lock" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <com.operatorsapp.view.EmeraldSpinner
                android:id="@+id/ATATV_language_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="21dp"
                android:layout_toStartOf="@+id/toolbar_tutorial_iv"
                android:drawSelectorOnTop="true"
                app:theme="@style/ProximaNovaSemiBold"
                tools:ignore="MissingPrefix" />


            <ImageView
                android:id="@+id/toolbar_tutorial_iv"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginEnd="31dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/apps_white" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginEnd="31dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/settings_new_small" />

            <RelativeLayout
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginEnd="31dp">

                <ImageView
                    android:id="@+id/task_button"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_task" />

                <TextView
                    android:id="@+id/task_button_count_tv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/blue_circle"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/toolbar_notification_button"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginEnd="31dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/notifications"
                android:visibility="gone" />

        </LinearLayout>
        <!--<FrameLayout-->
        <!--android:id="@+id/toolbar_notification_counter_circle"-->
        <!--android:layout_width="15dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_alignTop="@+id/toolbar_notification_button"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:layout_marginEnd="28dp"-->
        <!--android:background="@drawable/blue_circle"-->
        <!--tools:visibility="gone">-->

        <!--<TextView-->
        <!--android:id="@+id/toolbar_notification_counter_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="12sp"-->
        <!--android:textStyle="bold" />-->


        <!--</FrameLayout>-->


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark_indigo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/ATATV_machine_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ATATV_job_indicator_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/job_indicator"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_no_data" />
                </LinearLayout>

                <TextView
                    android:id="@+id/ATATV_status_time_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_machine_id_name"
                    style="@style/FontStyle_T7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:autoSizeTextType="uniform" />


                <TextView
                    android:id="@+id/text_view_machine_status"
                    style="@style/FontStyle_T6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/toolbar_machine_separator"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@color/dark_indigo" />


        <RelativeLayout
            android:id="@+id/toolbar_technician_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:layoutDirection="ltr"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">


            <ImageView
                android:id="@+id/toolbar_technician_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/technician_blue_svg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/toolbar_technician_iv"
                android:src="@drawable/ic_drop_down_arrow_white" />


            <TextView
                android:id="@+id/toolbar_technician_open_calls_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toEndOf="@+id/toolbar_technician_iv"
                android:background="@drawable/blue_circle"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="visible" />

        </RelativeLayout>

        <View
            android:id="@+id/toolbar_technician_separator"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/dark_indigo" />

        <RelativeLayout
            android:id="@+id/toolbar_production_status_rl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="26">

            <LinearLayout
                android:id="@+id/toolbar_production_spinner_lil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.operatorsapp.view.EmeraldSpinner
                    android:id="@+id/toolbar_production_spinner"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/spinner_bckgrnd"
                    android:dropDownVerticalOffset="31dp"
                    android:popupBackground="@android:color/transparent"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/toolbar_production_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <View
                android:id="@+id/ATATV_spinner_disable_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/toolbar_job_spinner_separator"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/dark_indigo" />

        <com.operatorsapp.view.EmeraldSpinner
            android:id="@+id/toolbar_job_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="18"
            android:background="@drawable/spinner_bckgrnd"
            android:dropDownVerticalOffset="31dp"
            android:popupBackground="@android:color/transparent"
            app:theme="@style/ProximaNovaSemiBold" />

        <View
            android:id="@+id/toolbar_after_job_spinner_separator"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/dark_indigo" />

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="5"
            android:src="@drawable/operator" />

        <FrameLayout
            android:id="@+id/toolbar_operator_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="16">

            <TextView
                android:id="@+id/toolbar_operator_tv"
                style="@style/FontStyle_T99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/operator_sign_in_action_bar"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:autoSizeTextType="uniform" />

            <com.operatorsapp.view.EmeraldSpinner
                android:id="@+id/toolbar_operator_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spinner_bckgrnd"
                android:drawSelectorOnTop="true"
                android:dropDownVerticalOffset="51dp"
                android:popupBackground="@android:color/transparent"
                app:theme="@style/ProximaNovaSemiBold"
                tools:ignore="MissingPrefix" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
