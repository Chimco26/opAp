<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_parent_layout"
    android:layout_width="@dimen/widget_width"
    android:layout_height="@dimen/widget_height"
    android:background="@drawable/combined_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:id="@+id/OTWC_countdown_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:weightSum="10">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />


            <LinearLayout
                android:id="@+id/MWBC_power_BTN"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/button_green_with_round_corners"
                android:gravity="center"
                android:padding="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MWBC_power_IMG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/power_btn_background"
                    />

                <TextView
                    android:id="@+id/MWBC_power_TEXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/start"
                    android:layout_marginStart="10dp"
                    android:textSize="25sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeTextType="uniform"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>





