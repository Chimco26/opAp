<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/SCI_time"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="10:30" />

    <ImageView
        android:id="@+id/SCI_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:src="@drawable/white" />

    <LinearLayout
        android:id="@+id/SCI_text_ly"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/white"
        android:layout_marginStart="70dp"
        android:paddingEnd="2dp">
        <!--android:background="@drawable/service_call_border"-->


        <ImageView
            android:id="@+id/SCI_service_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/service_done" />

        <TextView
            android:id="@+id/SCI_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            tools:text="Send"
            />

    </LinearLayout>

    <View
        android:id="@+id/product_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/SCI_time"/>


</RelativeLayout>