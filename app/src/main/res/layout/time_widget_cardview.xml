<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_parent_layout"
    android:layout_width="@dimen/widget_width"
    android:layout_height="@dimen/widget_height"
    android:layout_centerInParent="true"
    android:background="@drawable/combined_shape"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="260">

    <LinearLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="10">


            <TextView
                android:id="@+id/time_widget_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Current quantity"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="23sp"
                app:autoSizeMaxTextSize="23sp"
                app:autoSizeTextType="uniform"/>

            <TextView
                android:id="@+id/time_widget_subtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:text="Total required 2k"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>

        <TextView
            android:id="@+id/time_widget_current_value"
            style="@style/FontStyle_T11"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="1.7k"
            android:textColor="@color/C16"
            android:textSize="30sp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeTextType="uniform"/>

    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray" />

    <com.operatorsapp.view.LineChartTimeSmall
        android:id="@+id/lineChart_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="195"
        android:layout_below="@id/top_rl"
        android:layout_marginTop="3dp" />

</LinearLayout>