<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:corner_radius="15dp"
    android:layout_marginBottom="15dp"
    android:layout_height="80dp"
    android:background="@color/reports_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_toStartOf="@+id/IW_remove_btn">

        <TextView
            android:id="@+id/IW_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/IW_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <ImageView
        android:id="@+id/IW_remove_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/rejects_copy_5"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"/>
</com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>