    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_text_view"
                style="@style/Roboto_Regular_Status_Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/dashes"
                android:textColor="@color/default_gray_status"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:background="@color/C20" />

            <TextView
                android:id="@+id/second_header_text_view"
                style="@style/Roboto_Regular_Status_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/product"
                android:textColor="@color/status_bar"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/prodct_Text_View"
                style="@style/Roboto_Regular_Status_Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="start"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/dashes"
                android:textColor="@color/default_gray_status"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/C20" />

            <TextView
                android:id="@+id/fourth_header_text_view"
                style="@style/Roboto_Regular_Status_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/duration"
                android:textColor="@color/status_bar"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/duration_text_view"
                style="@style/Roboto_Regular_Status_Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="start"
                android:text="@string/dashes"
                android:textColor="@color/default_gray_status"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/job_title"
                style="@style/Roboto_Regular_Status_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/report_job_spinner"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/report_job_spinner"
                android:text="@string/job"
                android:textColor="@color/status_bar"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/report_job_spinner"
                style="@style/Roboto_Regular_Status_Data"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/report_cycle_id_text_view"
                android:layout_marginEnd="25dp"
                android:paddingStart="15dp"
                android:text="@string/dashes"
                android:textSize="16sp" />


        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/selected_stop_crouton_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reports_background"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="56dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ichand" />

                <View
                    android:layout_width="69dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/divider_gray" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/FontStyle_T120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/report_stop_reason"
                    android:textSize="30sp" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/selected_stop_recycler_view"
                android:layout_marginBottom="70dp"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:scrollbarFadeDuration="0"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/selected_stop_recycler_view"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="50dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/button_cancel"
                    android:layout_width="134dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="@string/cancel"
                    style="@style/FontStyle_Button"
                    android:textAllCaps="true"
                    android:textColor="@drawable/button_cancel_text_selector"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/button_report"
                    android:layout_width="94dp"
                    style="@style/FontStyle_Button"
                    android:layout_height="34dp"
                    android:background="@drawable/button_bg_disabled"
                    android:text="@string/report"
                    android:textColor="@drawable/button_text_color_selector"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    </FrameLayout>
</LinearLayout>


