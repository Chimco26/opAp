<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="534dp"
    android:layout_height="470dp"
    android:background="@drawable/combined_shape"
    android:orientation="vertical"
    android:paddingBottom="69dp"
    android:paddingEnd="39dp"
    android:paddingStart="39dp"
    android:paddingTop="27dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IP_title"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/IP_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/default_gray"
                android:textSize="25sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/IP_img"
            android:layout_width="86dp"
            android:layout_height="68dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="@color/default_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/IP_split_ly"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

    </ScrollView>

</LinearLayout>