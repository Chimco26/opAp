<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/operator_screen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_factory"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:gravity="center_vertical"
            android:text="@string/operator_sign_in"/>

        <View
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/C20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/linearLayout3">

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="5dp"
         android:orientation="horizontal"
         >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/operator_id"
             android:textColor="@color/status_bar"
             android:textSize="20sp"/>

         <TextView
             android:id="@+id/operator_id_text_view"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/operator_id"
             android:layout_marginStart="20dp"
             android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:orientation="horizontal"
         >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/operator_name"
             android:textColor="@color/status_bar"
             android:textSize="20sp"/>

         <TextView
             android:id="@+id/operator_name_text_view"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/operator_name"
             android:layout_marginStart="20dp"
             android:textAppearance="?android:attr/textAppearanceMedium" />
     </LinearLayout>

 </LinearLayout>


            <Button
                android:id="@+id/button_selected_operator_sign_in"
                android:layout_width="128dp"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:layout_height="30dp"
                android:textColor="@drawable/button_text_color_selector"
                android:background="@drawable/buttons_selector"
                android:text="@string/common_signin_button_text"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>