<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_field_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/status_bar" />

            <TextView
                android:id="@+id/first_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/status_bar" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_field_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/planned_start"
                android:textColor="@color/status_bar"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/second_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/planned_start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/default_gray" />
        </LinearLayout>

        <View
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/third_field_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/status_bar" />

            <TextView
                android:id="@+id/third_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/product_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/default_gray" />
        </LinearLayout>

        <View
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fourth_field_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/status_bar" />

            <TextView
                android:id="@+id/fourth_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/erp_id"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/default_gray" />
        </LinearLayout>

        <View
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fifth_field_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/status_bar" />

            <TextView
                android:id="@+id/fifth_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/dashes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/default_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="126dp"
                android:layout_height="28dp"
                android:layout_marginEnd="5dp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@drawable/button_cancel_text_selector"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_activate_new_job"
                android:layout_width="128dp"
                android:layout_height="28dp"
                android:layout_weight="0.05"
                android:background="@drawable/buttons_selector"
                android:text="@string/activate_new_job"
                android:textColor="@drawable/button_text_color_selector"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>