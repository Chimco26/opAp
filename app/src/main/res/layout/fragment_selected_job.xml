<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_field_text_view"
                style="@style/Roboto_Regular_Status_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/dashes"
                android:textColor="@color/status_bar"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/first_title_text_view"
                style="@style/Roboto_Regular_Status_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/dashes"
                android:textColor="@color/status_bar"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/selected_job_crouton_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/reports_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/second_field_text_view"
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/planned_start"
                    android:textColor="@color/C1"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/second_title_text_view"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/planned_start"
                    android:textColor="@color/default_gray"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/divider_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/third_field_text_view"
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dashes"
                    android:textColor="@color/C1"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/third_title_text_view"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/product_name"
                    android:textColor="@color/default_gray"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/divider_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fourth_field_text_view"
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dashes"
                    android:textColor="@color/C1"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/fourth_title_text_view"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/erp_id"
                    android:textColor="@color/default_gray"
                    android:textSize="18sp"/>
            </LinearLayout>

            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/divider_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fifth_field_text_view"
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dashes"
                    android:textColor="@color/C1"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/fifth_title_text_view"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/dashes"
                    android:textColor="@color/default_gray"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/button_cancel"
                    style="@style/Roboto_Action_Bar_Title"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="30.5dp"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@drawable/button_cancel_text_selector"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/button_activate_new_job"
                    style="@style/FontStyle_T1"
                    android:layout_width="135dp"
                    android:layout_height="34dp"
                    android:background="@drawable/buttons_selector"
                    android:text="@string/activate_new_job"
                    android:textColor="@drawable/button_text_color_selector"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>