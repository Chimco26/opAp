<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/FR_channel_0_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BreeSerifRegular"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/channel_0"
                android:textColor="@color/dark_blue_two"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_0_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FR_channel_1_99_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginStart="33dp"
            android:orientation="vertical">

            <TextView
                style="@style/BreeSerifRegular"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/channel_1_99"
                android:textColor="@color/dark_blue_two"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_1_99_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FR_channel_100_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BreeSerifRegular"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/channel_100"
                android:textColor="@color/dark_blue_two"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_100_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_gray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

        <include
            android:id="@+id/FR_channel_0_ly"
            layout="@layout/chanel_0_layout"
            android:visibility="visible" />

        <include
            android:id="@+id/FR_channel_100_ly"
            layout="@layout/chanel_100_layout"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/FR_channel_1_99_main_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/FR_channel_1_99_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/FR_channel_1_99_no_data_ly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/FR_C1_99_no_data_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cloud"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/FR_C1_99_no_data_tv"
                    style="@style/FontStyle_T7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/no_data"
                    android:textColor="@color/divider_gray"
                    android:textSize="30sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>