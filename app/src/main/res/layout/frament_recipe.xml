<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/FR_channel_0_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/channel_0"
                android:textColor="@color/dark_blue_two"
                style="@style/BreeSerifRegular"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_0_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FR_channel_1_99_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginStart="33dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                style="@style/BreeSerifRegular"
                android:text="@string/channel_1_99"
                android:textColor="@color/dark_blue_two"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_1_99_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FR_channel_100_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/channel_100"
                style="@style/BreeSerifRegular"
                android:textColor="@color/dark_blue_two"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <View
                android:id="@+id/FR_channel_100_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_gray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include
        android:id="@+id/FR_channel_0_ly"
        layout="@layout/chanel_0_layout" />

    <include
        android:id="@+id/FR_channel_100_ly"
        layout="@layout/chanel_100_layout"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/FR_channel_1_99_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>
</LinearLayout>