<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="38dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/channel_0_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/channel_0"
                android:textColor="@color/dark_blue_two"
                android:textSize="35sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <View
                android:id="@+id/channel_0_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/dark_blue_two"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/channel_1_99_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="66dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/channel_1_99"
                android:textColor="@color/dark_blue_two"
                android:textSize="35sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <View
                android:id="@+id/channel_1_99_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/channel_100_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/channel_100"
                android:textColor="@color/dark_blue_two"
                android:textSize="35sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <View
                android:id="@+id/channel_100_btn_bottom"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/dark_blue_two"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/default_gray"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <include layout="@layout/chanel_0_layout" />

    <include layout="@layout/chanel_100_layout"
        android:visibility="gone"/>

</LinearLayout>