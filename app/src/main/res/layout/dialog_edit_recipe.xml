<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="338dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/DER_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/update"
            android:textAlignment="gravity"
            android:textColor="@color/blue1"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/DER_close_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:background="@color/transparentColor"
            android:src="@drawable/close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/DER_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DER_range_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/DER_et_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/box_strok_grey"
            android:gravity="top"
            android:imeOptions="flagNoEnterAction"
            android:inputType="textNoSuggestions|textMultiLine"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/DER_et_num"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/box_strok_grey"
            android:gravity="center"
            android:imeOptions="flagNoEnterAction"
            android:inputType="textNoSuggestions|textMultiLine"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:visibility="gone"/>


        <RadioGroup
            android:id="@+id/DER_boolean_radio"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/box_strok_grey"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/DER_parameter_radio_passed"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/radio_green_transparent"
                android:button="@null"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/passed"
                android:textColor="@color/selector_white_black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeTextType="uniform" />

            <RadioButton
                android:id="@+id/DER_parameter_radio_failed"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/radio_red_transparent"
                android:button="@null"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/failed"
                android:textColor="@color/selector_white_black"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeTextType="uniform" />

        </RadioGroup>


    </RelativeLayout>

    <Button
        android:id="@+id/DER_btn"
        android:layout_width="183dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_blue_with_round_corners"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>