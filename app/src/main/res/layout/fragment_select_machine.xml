<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment_crouton_anchor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/bg_factory" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/select_machine_title"
            style="@style/FontStyle_T120"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="43dp"
            android:layout_weight="0.35"
            android:text="@string/enter_machine_id_name"
            android:textSize="40sp" />


        <View
            android:layout_width="2dp"
            android:layout_height="150dp"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="45dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/machine_id_name"
                style="@style/FontStyle_T6"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:completionThreshold="1"
                android:dropDownVerticalOffset="2dp"
                android:hint="@string/machine_id_name"
                android:paddingStart="14dp"
                android:singleLine="true"
                android:textColorHint="@color/C2"
                tools:ignore="NestedWeights,RtlSymmetry">

                <requestFocus />
            </android.support.v7.widget.AppCompatAutoCompleteTextView>

            <RelativeLayout
                android:id="@+id/goBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="27.8dp">

                <ImageView
                    android:id="@+id/goBtn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg_disabled"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/FontStyle_T9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="@string/go"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>