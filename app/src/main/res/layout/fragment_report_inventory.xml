<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/report_inventory_screen"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="@string/product"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/status_bar"/>

        <TextView
            android:id="@+id/report_cycle_u_product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:singleLine="true"
            android:text="@string/product_name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/report_cycle_u_product_name_text_view"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/report_cycle_u_product_name_text_view"
            android:text="@string/id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/report_cycle_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/id_title"
            android:text="@string/product_id"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Spinner
            android:id="@+id/report_job_spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/report_cycle_id_text_view"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/report_job_spinner"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/report_job_spinner"
            android:text="@string/job"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/status_bar"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reports_background"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/icrepeat"
                    />

                <View
                    android:layout_width="60dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/divider_gray"/>

                <TextView
                    style="@style/FontStyle_T120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/report_inventory_nitem_production"
                    android:textSize="40sp"/>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0.97"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="@string/units"
                        android:textSize="20dp"
                        android:textColor="@color/status_bar"/>

                    <RelativeLayout
                        android:layout_width="351dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/edit_text_background_selector">

                        <LinearLayout
                            android:layout_width="349dp"
                            android:layout_height="49dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/button_minus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:src="@drawable/ic_indicator_exceeding"/>

                            <TextView
                                android:id="@+id/units_text_view"
                                style="@style/FontStyle_T6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1"
                                android:textColor="@color/status_bar"
                                android:textSize="20dp"/>

                            <ImageView
                                android:id="@+id/button_plus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:src="@drawable/ic_indicator_working"/>


                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="@string/package_type"
                        android:textSize="20dp"                           android:textColor="@color/status_bar"
                        android:layout_marginTop="20dp"/>

                    <RelativeLayout
                        android:layout_width="351dp"
                        android:layout_height="51dp"
                        android:background="@drawable/edit_text_background_selector">

                        <Spinner
                            android:id="@+id/package_type_spinner"
                            android:layout_width="349dp"
                            android:layout_height="41dp"
                            android:dropDownVerticalOffset="43dp"
                            >
                        </Spinner>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginRight="50dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/button_cancel"
                            android:layout_width="126dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="5dp"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@drawable/button_cancel_text_selector"
                            android:textSize="20dp"
                            />

                        <Button
                            android:id="@+id/button_report"
                            android:layout_width="104dp"
                            android:layout_height="wrap_content"
                            android:text="@string/report"
                            android:background="@drawable/buttons_selector"
                            android:textColor="@drawable/button_text_color_selector"
                            android:textSize="20dp"
                            android:layout_weight="0.13"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>