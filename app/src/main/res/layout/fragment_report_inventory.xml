<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:clickable="true"
              android:id="@+id/fragment_report_inventory"
                android:background="@android:color/white"
              >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_11_copy_2"
        android:gravity="center_vertical">


        <TextView
            style="@style/Roboto_Regular_Status_Title"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/product"
            android:textSize="16sp"
            android:textColor="@color/status_bar"/>

        <TextView
            style="@style/Roboto_Regular_Status_Data"
            android:id="@+id/report_cycle_u_product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/product_name"
            android:textSize="16sp"/>

        <TextView
            style="@style/Roboto_Regular_Status_Data"
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/report_cycle_u_product_name_text_view"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/report_cycle_u_product_name_text_view"
            android:gravity="center_vertical"
            android:text="@string/id"
            android:textSize="16sp"/>

        <TextView
            style="@style/Roboto_Regular_Status_Data"
            android:id="@+id/report_cycle_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/id_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/id_title"
            android:gravity="center_vertical"
            android:text="@string/product_id"
            android:textSize="16sp"/>

        <FrameLayout
            android:id="@+id/report_job_spinner_frame"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"

            >

            <Spinner
                android:visibility="gone"
                android:id="@+id/report_job_spinner"
                android:layout_width="200dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:dropDownVerticalOffset="55dp"/>

            <ProgressBar
                android:id="@+id/active_jobs_progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/C16"/>
        </FrameLayout>

        <TextView
            style="@style/Roboto_Regular_Status_Title"

            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/report_job_spinner_frame"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/report_job_spinner_frame"
            android:gravity="center_vertical"
            android:text="@string/josh"
            android:textSize="16sp"
            android:textColor="@color/status_bar"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/report_inventory_crouton_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reports_background"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="93dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_cardbox"/>

                <View
                    android:layout_width="69dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/divider_gray"/>

                <TextView
                    style="@style/FontStyle_T120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/report_inventory_nitem_production"
                    android:textSize="30sp"/>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="50dp"
                    android:layout_weight="0.97"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="@string/package_type"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>

                    <RelativeLayout
                        android:layout_width="282dp"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_text_background_selector">

                        <Spinner
                            android:id="@+id/package_type_spinner"
                            android:layout_width="280dp"
                            android:layout_height="46dp"
                            android:dropDownVerticalOffset="45dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/units"
                        android:textColor="@color/black"
                        android:textSize="22sp"/>

                    <LinearLayout
                        android:layout_width="282dp"
                        android:layout_height="48dp"
                        android:background="@color/divider_gray"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="280dp"
                            android:layout_height="46dp"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/button_minus"
                                android:layout_width="46dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/button_minus_selector"/>

                            <TextView
                                android:id="@+id/units_text_view"
                                style="@style/FontStyle_T6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="@string/one"
                                android:textColor="@color/status_bar"
                                android:textSize="22sp"/>

                            <ImageView
                                android:id="@+id/button_plus"
                                android:layout_width="46dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/button_plus_selector"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:layout_marginEnd="37dp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/button_cancel"
                            android:layout_width="134dp"
                            android:layout_height="34dp"
                            style="@style/FontStyle_Button"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:textColor="@drawable/button_cancel_text_selector"
                            android:textSize="22sp"/>

                        <Button
                            android:id="@+id/button_report"
                            android:layout_width="94dp"
                            android:layout_height="34dp"
                            android:layout_weight="0.13"
                            style="@style/FontStyle_Button"
                            android:background="@drawable/buttons_selector"
                            android:text="@string/report"
                            android:textColor="@drawable/button_text_color_selector"
                            android:textSize="22sp"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    </FrameLayout>
</LinearLayout>
</RelativeLayout>