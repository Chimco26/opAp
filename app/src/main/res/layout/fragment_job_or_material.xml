<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JobOrMaterialFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/button_cancel"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/matics_logo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue_two"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/FJOM_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            style="@style/ProximaNovaSemiBold"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:text="@string/quality_control"
            android:textAlignment="center"
            android:maxLines="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/FJOM_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@+id/FJOM_btn_ly"
            android:padding="15dp"
            style="@style/ProximaNovaSemiBold"
            android:layout_below="@+id/FJOM_title_tv"
            android:textColor="@color/black"
            android:text="@string/run_test_for"
            android:textSize="25sp"
            android:maxLines="2"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/FJOM_btn_ly"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="200dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/FJOM_job_btn"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:maxWidth="200dp"
                android:minWidth="150dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:background="@color/blue1"
                android:text="@string/job"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/FJOM_material_btn"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:maxWidth="200dp"
                android:minWidth="150dp"
                android:layout_alignParentEnd="true"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:background="@color/blue1"
                android:text="@string/material"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>