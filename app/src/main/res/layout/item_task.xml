<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="129dp"
    android:layout_margin="7dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ITask_main_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/ITask_priority_view"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/red_dark" />

        <TextView
            android:id="@+id/ITask_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ITask_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/ITask_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ITask_priority_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            tools:ignore="ContentDescription"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/ITask_assign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/assign_to"/>

        <TextView
            android:id="@+id/ITask_assign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ITask_assign_title"/>
    </RelativeLayout>
</RelativeLayout>