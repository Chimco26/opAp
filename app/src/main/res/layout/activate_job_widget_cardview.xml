<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_parent_layout"
    android:layout_width="@dimen/widget_width"
    android:layout_height="@dimen/widget_height"
    android:layout_centerInParent="true"
    android:background="@drawable/combined_shape"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="5dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp"
    android:weightSum="260">

    <LinearLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/HFT_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/activate_job"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            app:autoSizeMaxTextSize="23sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/HFT_subtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="18sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="15"
        android:orientation="horizontal"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="25sp"
        app:autoSizeTextType="uniform"
        android:weightSum="10">

        <EditText
            android:id="@+id/HFT_edit_text"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="8"
            android:background="@drawable/box_grey_stroke"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="textNoSuggestions"
            app:autoSizeMaxTextSize="25sp"
            app:autoSizeTextType="uniform"
            android:imeOptions="actionDone"/>


    </LinearLayout>

</LinearLayout>