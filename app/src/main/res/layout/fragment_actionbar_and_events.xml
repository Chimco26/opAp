<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rectangle_11_copy_2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="30dp">

                <LinearLayout
                    android:id="@+id/FAAE_product_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/FAAE_multiple_product_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/config" />

                    <TextView
                        style="@style/Roboto_Regular_Status_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/product"
                        android:textColor="@color/status_bar"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/text_view_product_name_and_id"
                            style="@style/Roboto_Regular_Status_Data"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/FAAE_product_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:dropDownVerticalOffset="43dp"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/FAAE_product_ly_separator1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/C20" />

                <LinearLayout
                    android:id="@+id/FAAE_josh_id_ly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Roboto_Regular_Status_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/job"
                        android:textColor="@color/status_bar"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_view_job_id"
                        style="@style/Roboto_Regular_Status_Data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxWidth="300dp"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:id="@+id/FAAE_josh_id_ly_separator2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/C20" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Roboto_Regular_Status_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/shift"
                        android:textColor="@color/status_bar"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_view_shift_id"
                        style="@style/Roboto_Regular_Status_Data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_view_timer"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_clock_blue" />


            </LinearLayout>

            <View
                android:id="@+id/FAAE_status_white_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_filter"
                android:visibility="gone" />

            <View
                android:id="@+id/FAAE_status_black_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_filter"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/parent_layouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/shift_log_swipe_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/FAAE_lenox_machines_ly"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_transparent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="@string/machine"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/FAAE_lenox_machines_rv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fragment_dashboard_shiftlog"
                            android:layout_width="124dp"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/FAAE_lenox_machines_ly"
                            android:background="@drawable/side_menu"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Switch
                                    android:id="@+id/FAAE_shift_type_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/switch_shiftlog"
                                    android:gravity="start|center_vertical"
                                    android:thumb="@null"
                                    android:track="@null" />

                                <ImageView
                                    android:id="@+id/FAAE_legend_btn"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_legend"
                                    android:visibility="gone" />

                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/FAAE_filter_ly"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/FAAE_filter_btn"
                                        android:layout_width="25dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/path" />

                                    <HorizontalScrollView
                                        android:id="@+id/FAAE_filters_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fadeScrollbars="false"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <CheckBox
                                                android:id="@+id/FAAE_select_all"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:buttonTint="@color/blue1"
                                                android:checked="true"
                                                android:text="@string/select_all" />

                                            <CheckBox
                                                android:id="@+id/FAAE_service_alls"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:buttonTint="@color/blue1"
                                                android:checked="true"
                                                android:text="@string/service_calls" />

                                            <CheckBox
                                                android:id="@+id/FAAE_messages"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:buttonTint="@color/blue1"
                                                android:checked="true"
                                                android:text="@string/messages" />

                                            <CheckBox
                                                android:id="@+id/FAAE_rejects"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:buttonTint="@color/blue1"
                                                android:checked="true"
                                                android:text="@string/rejects" />

                                            <CheckBox
                                                android:id="@+id/FAAE_production_report"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:buttonTint="@color/blue1"
                                                android:checked="true"
                                                android:text="@string/production_report" />

                                        </LinearLayout>
                                    </HorizontalScrollView>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="2dp"
                                    android:background="@color/divider_gray" />
                            </LinearLayout>

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.operatorsapp.view.TimeLineView
                                        android:id="@+id/FAAE_time_container"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent" />


                                </LinearLayout>
                            </ScrollView>

                            <Switch
                                android:id="@+id/FAAE_alarm_chekbox"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="start|center_vertical"
                                android:switchPadding="30dp"
                                android:text="@string/alarms"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:thumb="@drawable/drawable_switch"
                                android:track="@drawable/drawable_bg"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/fragment_dashboard_min_duration_lil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/min_duration_shiftlog"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/fragment_dashboard_min_duration_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|start"
                                    android:paddingStart="3dp"
                                    android:textAlignment="textStart"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:orientation="vertical">

                                <me.grantland.widget.AutofitTextView
                                    android:id="@+id/fragment_dashboard_no_notif"
                                    style="@style/FontStyle_T7"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:maxLines="1"
                                    android:text="@string/no_notifications"
                                    android:textColor="@color/divider_gray"
                                    android:textSize="30sp"
                                    android:visibility="gone"
                                    app:minTextSize="15dp" />

                                <ProgressBar
                                    android:id="@+id/fragment_dashboard_loading_data_shiftlog"
                                    style="@style/FontStyle_T7"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:indeterminateTint="@color/C16"
                                    android:indeterminateTintMode="src_atop"
                                    android:maxLines="1"
                                    android:text="@string/loading_data"
                                    android:textColor="@color/divider_gray"
                                    android:textSize="30sp"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/FAAE_event_selected_ly"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/FAAE_selected_nmbr"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:textColor="@color/black"
                                                android:textSize="18sp" />

                                        </RelativeLayout>

                                        <View
                                            android:id="@+id/FAAE_separator"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/default_gray" />

                                    </LinearLayout>
                                    <!--todo kuti-->
                                    <com.operatorsapp.view.PinchRecyclerView
                                        android:id="@+id/FAAE_events_recycler"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scrollbars="vertical"
                                        android:visibility="gone" />

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/fragment_dashboard_shift_log"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scrollbarFadeDuration="0"
                                        android:scrollbars="vertical" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v4.widget.SwipeRefreshLayout>

                <View
                    android:id="@+id/fragment_dashboard_divider"
                    android:layout_width="45dp"
                    android:layout_height="400dp"
                    android:layout_alignEnd="@id/shift_log_swipe_refresh"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-25dp"
                    android:background="@android:color/transparent"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/fragment_dashboard_left_btn"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@id/shift_log_swipe_refresh"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-23dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/left_panel_btn" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/FAAE_black_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_filter"
                android:clickable="true"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/FAAE_bottom_msg_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_lite"
        android:padding="1dp">

        <LinearLayout
            android:id="@+id/bottom_notification_lil"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white_default"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_notification_iv"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/bottom_notification_sender_tv"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:textAlignment="textStart"
                style="@style/ToolbarTheme"
                android:textSize="14sp"
                android:textColor="@color/blue1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/bottom_notification_tv"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:textAlignment="textStart"
                style="@style/ToolbarTheme"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/bottom_notification_time_tv"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:textAlignment="textStart"
                style="@style/ToolbarTheme"
                android:textSize="14sp"
                android:textColor="@color/blue1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/message_dark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
