<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rectangle_11_copy_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/FAAE_multiple_product_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/config" />

                <TextView
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/product"
                    android:textColor="@color/status_bar"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_view_product_name_and_id"
                        style="@style/Roboto_Regular_Status_Data"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/FAAE_product_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:dropDownVerticalOffset="43dp"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="@color/C20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/job"
                    android:textColor="@color/status_bar"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_job_id"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="@color/C20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:orientation="horizontal">

                <TextView
                    style="@style/Roboto_Regular_Status_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/shift"
                    android:textColor="@color/status_bar"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_shift_id"
                    style="@style/Roboto_Regular_Status_Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_view_timer"
                style="@style/Roboto_Regular_Status_Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_clock_blue" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/parent_layouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/status_layout">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/shift_log_swipe_refresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/FAAE_lenox_machines_ly"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_transparent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="@string/machine"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/FAAE_lenox_machines_rv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_dashboard_shiftlog"
                        android:layout_width="124dp"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/FAAE_lenox_machines_ly"
                        android:background="@drawable/side_menu"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/fragment_dashboard_min_duration_lil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/min_duration_shiftlog"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_dashboard_min_duration_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|start"
                                android:paddingStart="3dp"
                                android:textAlignment="textStart"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/fragment_dashboard_no_notif"
                                style="@style/FontStyle_T7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:maxLines="1"
                                android:text="@string/no_notifications"
                                android:textColor="@color/divider_gray"
                                android:textSize="30sp"
                                android:visibility="gone"
                                app:minTextSize="15dp" />

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/fragment_dashboard_loading_data_shiftlog"
                                style="@style/FontStyle_T7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:maxLines="1"
                                android:text="@string/loading_data"
                                android:textColor="@color/divider_gray"
                                android:textSize="30sp"
                                android:visibility="gone"
                                app:minTextSize="15dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/FAAE_event_selected_ly"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/FAAE_selected_nmbr"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                        <ImageView
                                            android:id="@+id/FAAE_unselect_all"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="5dp"
                                            android:src="@drawable/close" />


                                    </RelativeLayout>

                                    <View
                                        android:id="@+id/FAAE_separator"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/default_gray" />

                                </LinearLayout>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/fragment_dashboard_shift_log"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollbarFadeDuration="0"
                                    android:scrollbars="vertical" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v4.widget.SwipeRefreshLayout>

            <View
                android:id="@+id/fragment_dashboard_divider"
                android:layout_width="45dp"
                android:layout_height="400dp"
                android:layout_alignEnd="@id/shift_log_swipe_refresh"
                android:layout_marginEnd="-25dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:clickable="true" />

            <ImageView
                android:id="@+id/fragment_dashboard_left_btn"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@id/shift_log_swipe_refresh"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-23dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/left_panel_btn" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
