<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/basic_dialog_close_iv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x"/>


    <ImageView
        android:id="@+id/basic_dialog_header_icon_iv"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/attention"/>

    <TextView
        android:id="@+id/basic_dialog_header_tv"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/basic_dialog_header_icon_iv"
        android:padding="25dp"
        android:textStyle="bold"
        style="@style/ProximaNovaSemiBold"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/basic_dialog_body_tv"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/basic_dialog_header_tv"
        android:padding="25dp"
        style="@style/ProximaNovaSemiBold"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/basic_dialog_action_lil"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/basic_dialog_body_tv"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/basic_dialog_action_no_btn"
            android:padding="25dp"
            android:textStyle="bold"
            style="@style/ProximaNovaSemiBold"
            android:textSize="25sp"
            android:background="@color/blue1"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/basic_dialog_action_another_btn"
            android:padding="25dp"
            android:textStyle="bold"
            style="@style/ProximaNovaSemiBold"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:visibility="gone"
            android:background="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/basic_dialog_action_yes_btn"
            android:padding="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            style="@style/ProximaNovaSemiBold"
            android:textSize="25sp"
            android:background="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>