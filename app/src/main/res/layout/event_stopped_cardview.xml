<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_stopped_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shift_log_item_background_color_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/event_stopped_title_layout"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:id="@+id/ESC_main_height"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="6">

                <CheckBox
                    android:id="@+id/event_stop_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4.4"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/event_stopped_shift_log_item_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_cloud" />

                    <TextView
                        android:id="@+id/event_stopped_shift_log_item_time"
                        style="@style/FontStyle_T9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:text="12:25"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/event_stopped_shift_log_item_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1.8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:autoSizeMaxTextSize="18sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/event_stopped_shift_log_item_sub_reason"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1.2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:id="@+id/event_stopped_shift_log_item_split_event"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:src="@drawable/scissors"
                android:visibility="gone" />


        </LinearLayout>

        <View
            android:id="@+id/event_stopped_shift_log_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_gray"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/event_stopped_shift_log_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="12">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/start_"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/event_stopped_shift_log_item_start"
                        style="@style/FontStyle_T31"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="8:50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/event_stopped_shift_log_item_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="05.11.2016"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/divider_gray" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="3">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/end_"
                        android:textSize="16sp"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/event_stopped_shift_log_item_end"
                        style="@style/FontStyle_T31"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="9:50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/event_stopped_shift_log_item_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="05.11.2016"
                        android:textSize="14sp"
                        app:autoSizeMaxTextSize="18sp"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Duration: "
                    android:textSize="15sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/event_stopped_shift_log_item_duration"
                    style="@style/FontStyle_T31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:text="8:11h"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform" />


                <TextView
                    android:id="@+id/event_stopped_shift_log_item_tech_call_tv"
                    style="@style/FontStyle_T31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:text="@string/open_new_call"
                    android:textStyle="bold"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:background="@color/white"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/event_stopped_shift_log_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray" />

</LinearLayout>