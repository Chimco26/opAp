<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_reject_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="483dp"
        android:layout_height="402dp"
        android:background="@color/white"
        android:padding="23dp">

        <RelativeLayout
            android:id="@+id/button_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/close" />
        </RelativeLayout>

        <TextView
            android:id="@+id/DALJ_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/activate_last_job"
            android:textColor="@color/blue1"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/DALJ_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/do_you_want_to_activate_the_last_job_you_work_on_job"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/DALJ_negative_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:background="@color/grey_lite"
                android:text="@string/no"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"/>

            <View
                android:layout_width="200dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/DALJ_positive_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:background="@color/blue1"
                android:text="@string/yes"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>