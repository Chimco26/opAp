<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_reject_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="483dp"
        android:layout_height="402dp"
        android:background="@color/white"
        android:padding="23dp">

        <RelativeLayout
            android:id="@+id/button_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/close" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/DALJ_title_ic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_activate" />

        <TextView
            android:id="@+id/DALJ_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DALJ_title_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="@string/activate_last_job"
            android:textColor="@color/blue1"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/DALJ_sub_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DALJ_title_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="@string/do_you_want_to_activate_the_last_job_you_work_on_job"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/DALJ_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DALJ_sub_title_tv"
            android:layout_alignBottom="@+id/TTBD_btn_ly"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <RelativeLayout
            android:id="@+id/TTBD_btn_ly"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/DALJ_negative_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_stroke_blue_round_corners"
                android:gravity="center"
                android:maxWidth="200dp"
                android:minWidth="150dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/no"
                android:textColor="@color/blue1"
                android:textSize="22sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="22sp"/>

            <TextView
                android:id="@+id/DALJ_positive_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_blue_with_round_corners"
                android:gravity="center"
                android:maxWidth="200dp"
                android:minWidth="150dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="22sp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>