<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JobActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/rectangle_11_copy_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@color/dark_blue_two"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AJA_back_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:text="@string/smaller_than_symbole"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:gravity="center"
                    android:text="@string/actionnable_jobs"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/AJA_left_layout"
                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:background="@color/grey_transparent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingEnd="23dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center_vertical"
                        android:text="@string/search_job_id_or_product_name"
                        android:textColor="@color/grey1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/box_strok_grey"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingEnd="12dp"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp">

                        <EditText
                            android:id="@+id/AJA_search_et"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:background="@color/transparentColor"
                            android:gravity="center_vertical"
                            android:hint="@string/search"
                            android:textColor="@color/grey1"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/AJA_search_btn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/search" />

                    </RelativeLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/AJA_search_rv"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_gray" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/AJA_product_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="31dp"
                android:paddingEnd="23dp"
                android:paddingStart="53dp"
                android:paddingTop="26dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/AJA_job_id_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/blue1"
                            android:textSize="35sp" />

                        <Button
                            android:id="@+id/AJA-job_activate_btn"
                            android:layout_width="241dp"
                            android:layout_height="56dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@color/dark_blue_two"
                            android:text="@string/activate"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="19dp"
                        android:background="@color/divider_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/AJA_title_line1_tv1"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line1_tv2"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/AJA_title_line1_tv3"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line1_tv4"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/AJA_title_line1_tv5"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line1_tv6"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/AJA_title_line2_tv1"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line2_tv2"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/AJA_title_line2_tv3"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:layout_marginStart="30dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line2_tv4"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/AJA_title_line2_tv5"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/default_gray"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/AJA_title_line2_tv6"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/default_gray"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="27dp"
                        android:background="@color/divider_gray" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="28dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/AJA_img1"
                                        android:layout_width="390dp"
                                        android:layout_height="244dp"
                                        android:background="@drawable/combined_shape"
                                        android:padding="10dp" />

                                    <LinearLayout
                                        android:id="@+id/AJA_img1_no_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/default_image"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/no_available_image"
                                            android:textColor="@color/default_gray"
                                            android:textSize="20sp"/>

                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/AJA_img2"
                                        android:layout_width="390dp"
                                        android:layout_height="244dp"
                                        android:layout_marginStart="29dp"
                                        android:background="@drawable/combined_shape"
                                        android:padding="10dp" />

                                    <LinearLayout
                                        android:id="@+id/AJA_img2_no_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_centerInParent="true"
                                        android:gravity="center"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/default_image"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/no_available_image"
                                            android:textColor="@color/default_gray"
                                            android:textSize="20sp"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="52dp">

                                <include
                                    android:id="@+id/AJA_item_material"
                                    layout="@layout/job_actions_materials_item" />

                                <View
                                    android:layout_width="29dp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/AJA_item_mold"
                                    layout="@layout/item_job_actions_mold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/AJA_actions_ly"
                                android:layout_width="match_parent"
                                android:layout_height="380dp"
                                android:layout_marginTop="63dp"
                                android:background="@drawable/combined_shape"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="42dp"
                                    android:textSize="25sp"
                                    android:textColor="@color/black" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/divider_gray"/>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/AJA_actions_rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>