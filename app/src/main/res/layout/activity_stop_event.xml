<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ASE_bar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/rectangle_11_copy_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/dark_blue_two"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ASE_back_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/ASE_title"
                style="@style/Roboto_Action_Bar_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:gravity="center"
                android:text="@string/stop_logs"
                android:textColor="@color/white"
                android:textSize="35sp" />

        </LinearLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/ASE_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>