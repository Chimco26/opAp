<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_dashboard_rightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_factory" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_dashboard_leftLayout"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dashboard_shift_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_dashboard_arrow_left"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/double_left_arrow"
                android:visibility="invisible" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <ImageView
                android:id="@+id/fragment_dashboard_arrow_right"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/double_right_arrow" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/fragment_dashboard_divider"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/fragment_dashboard_leftLayout"
        android:layout_marginEnd="28dp"
        android:background="@android:color/transparent"
        android:clickable="true" />

</RelativeLayout>