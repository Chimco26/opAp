<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_dashboard_rightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_dashboard_no_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_data"
                android:textColor="@color/no_data_gray"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_dashboard_leftLayout"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_dashboard_no_notif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/no_notifications"
            android:textColor="@color/no_data_gray"
            android:textSize="35sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_dashboard_shift_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="45dp" />

    </LinearLayout>

    <View
        android:id="@+id/fragment_dashboard_divider"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_alignEnd="@id/fragment_dashboard_leftLayout"
        android:background="@android:color/transparent"
        android:clickable="true" />

    <!--<ImageView-->
    <!--android:id="@+id/fragment_dashboard_arrow_left"-->
    <!--android:layout_width="45dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_alignEnd="@id/fragment_dashboard_leftLayout"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:paddingBottom="5dp"-->
    <!--android:paddingEnd="5dp"-->
    <!--android:src="@drawable/double_left_arrow"-->
    <!--android:visibility="invisible" />-->


    <ImageView
        android:id="@+id/fragment_dashboard_left_btn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/fragment_dashboard_leftLayout"
        android:layout_centerVertical="true"
        android:paddingEnd="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/left_panel_button_selector" />

</RelativeLayout>