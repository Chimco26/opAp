<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/time_container"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/EI_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15px" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/EI_check_container"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:visibility="gone">


            <CheckBox
                android:id="@+id/EI_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:visibility="gone" />
            <!--android:button="@drawable/event_checkbox_selector"-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content">


            <View
                android:id="@+id/EI_line"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/red_light" />

            <View
                android:id="@+id/EI_circle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/EI_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp">


            <TextView
                android:id="@+id/EI_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/event_item_border"
                android:paddingStart="7dp"
                android:paddingTop="4dp"
                android:paddingEnd="7dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textSize="10px"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/EI_tech_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/EI_service_call_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>


</RelativeLayout>