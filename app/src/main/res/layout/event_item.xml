<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="0dp"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:id="@+id/time_container"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/EI_time"
            android:textSize="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/EI_check_container"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:visibility="gone">


    <CheckBox
        android:id="@+id/EI_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:buttonTint="@color/colorPrimaryDark"
        android:visibility="gone"/>
        <!--android:button="@drawable/event_checkbox_selector"-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="wrap_content">


    <View
        android:id="@+id/EI_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/red_light" />

    <View
        android:id="@+id/EI_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_blue" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/EI_relative"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/EI_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="10px"
            android:background="@drawable/event_item_border"
            android:visibility="visible"/>
    </RelativeLayout>



</LinearLayout>